<div class="card bg-white" style="margin:auto auto;">






    @{
        if (ViewBag.PayStatus)
        {


            <center class="p-5 btn-success">

                <label id="Message" class="h4 text-white">پرداخت با موفقیت انجام شد</label>
            </center>
        }
        else
        {

            <center class="p-5 btn-danger">

                <label id="Message" class="h4 text-white">پرداخت با خطا انجام شد</label>
            </center>
        }
    }


    @*<h1>@ViewBag.ResCode</h1>
    <h1>@ViewBag.SaleReferenceId</h1>
    <h1>@ViewBag.SaleOrderId</h1>*@



    <table class="table table-bordered table-striped" style="align-content:center;margin:auto auto 32px auto;">

            <tr>
                <td style="width:50%; align-content:center;text-align:center;">
                    <label id="lbl4" class="text-dark bg-info">میزان پرداخت</label>

                </td>
                <td style="width:50%;align-content:center;text-align:center;">
                    <label id="Amount" class="text-dark bg-info">@ViewBag.FinalAmount</label>
                </td>

            </tr>
        </table>

    <table class="table" style="width:100%;align-content:center;">
        <tr>
            <td style="align-content:center;text-align:center;">
                <a id="back-btn" class="btn btn-success bg-info" href="yadamoz://">
                    بازگشت به موبایل
                </a>
            </td>
        </tr>
    </table>

</div>


